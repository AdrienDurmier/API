{% extends 'back.html.twig' %}

{% block title "Création d'un utilisateur" %}

{% block body %}

    <div class="d-sm-flex align-items-center justify-content-between mb-2">
        <h1 class="h3 mb-0 text-gray-800">Création d'un utilisateur</h1>
    </div>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('user.index') }}">Gestion des utilisateurs</a></li>
            <li class="breadcrumb-item active" aria-current="page">Création d'un utilisateur</li>
        </ol>
    </nav>

    <hr>

    <form action="#" method="post" enctype="multipart/form-data">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <div class="h6 m-0 font-weight-bold text-primary">Informations</div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="email">Username / email <span class="text-danger">*</span></label>
                    <input id="email" name="email" type="email" class="form-control form-control-sm" required>
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe <span class="text-danger">*</span></label>
                    <input id="password" name="password" type="text" class="form-control form-control-sm" required>
                </div>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <div class="h6 m-0 font-weight-bold text-primary">Droits d'accès</div>
            </div>
            <div class="card-body">
                <p>Plateforme Telecom</p>
                <div class="form-check">
                    <input class="form-check-input" name="roles[]" type="checkbox" id="ROLE_TELECOM_ADMIN" value="ROLE_TELECOM_ADMIN">
                    <label class="form-check-label" for="ROLE_TELECOM_ADMIN">ROLE_TELECOM_ADMIN</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" name="roles[]" type="checkbox" id="ROLE_TELECOM_COMMERCIAL" value="ROLE_TELECOM_COMMERCIAL">
                    <label class="form-check-label" for="ROLE_TELECOM_COMMERCIAL">ROLE_TELECOM_COMMERCIAL</label>
                </div>
                <hr>
                <p>Fiche de frais</p>
                <div class="form-check">
                    <input class="form-check-input" name="roles[]" type="checkbox" id="ROLE_TELECOM_ADMIN" value="ROLE_TELECOM_ADMIN">
                    <label class="form-check-label" for="ROLE_TELECOM_ADMIN">ROLE_FRAIS_ADMIN</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" name="roles[]" type="checkbox" id="ROLE_FRAIS_EMPLOYE" value="ROLE_FRAIS_EMPLOYE">
                    <label class="form-check-label" for="ROLE_FRAIS_EMPLOYE">ROLE_FRAIS_EMPLOYE</label>
                </div>
            </div>
        </div>

        <hr>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">
                    <input id="enabled" name="enabled" type="checkbox" aria-label="Activer">&nbsp;Activer ce compte
                </span>
            </div>
            <button class="btn btn-success" type="submit">
                <i class="far fa-save"></i>&nbsp;Enregistrer
            </button>
        </div>

    </form>

{% endblock %}