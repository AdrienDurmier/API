{% extends 'front.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}


<div class="container">

    <div class="row justify-content-center">

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Formulaire de connexion</h1>
                            </div>

                            <form method="post" class="user">
                                <div class="form-group">
                                    <label id="usernameLabel" for="email" class="sr-only">Votre adresse email</label>
                                    <input type="email" name="email" id="email" class="form-control form-control-user" aria-describedby="usernameLabel" placeholder="Votre adresse email...">
                                </div>
                                <div class="form-group">
                                    <label id="passwordLabel" for="password" class="sr-only">Votre mot de passe</label>
                                    <input type="password" name="password" id="password" class="form-control form-control-user" aria-describedby="usernameLabel" placeholder="Votre mot de passe">
                                </div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                {#
                                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                    See https://symfony.com/doc/current/security/remember_me.html

                                    <div class="checkbox mb-3">
                                        <label>
                                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                                        </label>
                                    </div>
                                #}

                                <button class="btn btn-primary btn-user btn-block" type="submit">
                                    <i class="fas fa-sign-in-alt"></i> Se connecter
                                </button>
                            </form>

                            <hr>

                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Mot de passe oubli√© ?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>

        </div>

    </div>

  </div>

{% endblock %}
